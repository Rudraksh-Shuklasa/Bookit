<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReferActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_close"
            android:id="@+id/backHomeScreen" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_refer"
            android:id="@+id/imageView8"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="46dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/next_hideColor"
            android:text="Friends joins friend earns Rs.50 \nFriends rides, you earns Rs.50"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/textView10"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Share your referral rides"
              app:layout_constraintTop_toBottomOf="@+id/textView10"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" android:layout_marginTop="6dp" android:id="@+id/textView11"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="How refferal works?"
              android:textColor="@color/Blue"
              app:layout_constraintTop_toBottomOf="@+id/textView11"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:id="@+id/textView12"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="16dp"
                  android:foregroundGravity="center"
                  android:layout_margin="24dp"
                  android:background="@drawable/referbackgorund" app:layout_constraintTop_toBottomOf="@+id/textView12"
                  android:id="@+id/linearLayout3" tools:layout_editor_absoluteX="24dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABCD EFGH XYZG PWRM ABC"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="left"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Copy Code"
                  android:textColor="@color/Blue"
                  android:layout_marginLeft="24dp"
                  android:layout_gravity="left"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="0dp"
            android:layout_above="@+id/crdVarifyOtp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/idRecyclerViewHorizontalList"
                android:layout_width="wrap_content"
                android:paddingRight="16dp"
                android:layout_height="wrap_content"
        />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>